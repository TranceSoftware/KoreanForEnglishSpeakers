<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/colorTransparent"/>

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="7dp"/>
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp"/>
            <solid android:color="@color/Black"/>

        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
            <stroke android:width="1dp" android:color="#808080"/>
        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp"/>
            <solid android:color="@color/Black"/>

        </shape>
    </item>
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp"/>
            <solid android:color="@color/CreamGreen"/>

        </shape>
    </item>
</layer-list>