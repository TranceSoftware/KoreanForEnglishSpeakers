        android:id="@+id/Item0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item0"
        android:textSize="25dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

