<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#d0fffd"
                android:centerColor="#ffffff"
                android:endColor="#7ec0ee"
                android:angle="90"
                android:centerX="20%" />
        </shape>
    </item>
    <item android:bottom="100dp" android:right="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ffffff"
                android:centerColor="#ffffff"
                android:endColor="#7ec0ee"
                android:angle="90"
                android:centerX="85%" />
        </shape>
    </item>
</layer-list>